<%- layout('layouts/boilerplate') -%>
  <div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-12 col-lg-6 offset-lg-3">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data"
        novalidate class="validated-form">
        <div class="mb-3">
          <label class="form-label" for="title">Title:</label>
          <input class="form-control" type="text" required id="title" name="campground[title]"
            value="<%= campground.title %>" />
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="location">Location:</label>
          <input class="form-control" required type="text" id="location" name="campground[location]"
            value="<%= campground.location %>" />
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>



        <div class="mb-3">
          <label class="form-label" for="price">Price per Night:</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input required class="form-control" value="<%= campground.price %>" type="number" id="price"
              name="campground[price]" placeholder="0.00" step="0.1" />
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="description">Description:</label>
          <textarea required class="form-control" type="text" id="description"
            name="campground[description]"><%= campground.description %></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>



        <div class="mb-3">
          <label class="form-label" for="image">Add images:</label>
          <input class="form-control" type="file" id="images" name="images" multiple />
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="image">Current images:</label>
          <div>
            <% campground.images.forEach(function(image, i) { %>
              <div class="mb-2" style="display:block; position: relative;">
                <div class="flex-column">
                  <img src="<%= image.thumbnail %>" alt="Campground Image" style="margin-right: 10px;" />
                  <input type="checkbox" name="deleteImages[]" id="image<%=i%>" value="<%= image.filename %>">
                  <label for="image<%=i%>">Delete</label>
                </div>
              </div>
              <% }) %>
                <% if(campground.images.length===0) { %>
                  <p class="text-muted">No images found for this campground.</p>
                  <% } %>
          </div>
        </div>
        <div class="mb-3">
          <button class="btn btn-info" type="submit">Save</button>
        </div>
      </form>
      <a href="/campgrounds/<%= campground._id %>">Cancel</a>
    </div>
  </div>